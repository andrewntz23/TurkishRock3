    <stanza type="verse"><line>Bu uykudan böyle bir ses</line>
        <line><address formality="informal" pos="verb" mood="imp"><addressee/>Duy uyan etme uyan</address></line>
        <line>Uyku bir can olsa bile</line>
        <line><address formality="informal" pos="verb" mood="imp">Kıy uyan <addressee>gardaş</addressee> uyan</address></line></stanza>
    <break instr="electric guitar" scale="major" solo="yes"/>
    <stanza type="verse"><line>Uyku tembel niyetidir</line>
        <line>Aç gözünü hayat nedir</line>
        <line>Gittiğin yol çok kötüdür</line>
        <line><address formality="informal" pos="verb" mood="imp"><addressee><nature>Çay</nature></addressee> uyan <addressee>halkım</addressee> uyan</address></line></stanza>
    <break/>
    <stanza type="verse"><line>Ateş düşmüş döşeğine</line>
        <line><address formality="informal" pos="pronoun"><addressee>Sen</addressee> gene uyursun gene</address></line>
        <line>Elini vicdan üstüne</line>
        <line><address formality="informal" pos="verb" mood="imp"><addressee><nature>Koy</nature></addressee> uyan nolur uyan</address></line></stanza>
    <break/>
    <stanza type="verse"><line>Kazanmadan yemek ayıp</line>
        <line>İnsan hakkı olur kayıp</line>
        <line>Tek <narrator number="1">benim sırtımdan</narrator> soyup</line>
        <line><address formality="informal" pos="verb" mood="imp">Doy uyan yapma uyan</address></line></stanza>
    <break/>
    <stanza type="verse"><line>Uyuyanın kazancı olmaz</line>
        <line>İnsana bir vefa gelmez</line>
        <line>Bir daha Mahzuni gelmez</line>
        <line><address formality="informal" pos="verb" mood="imp">Say uyan <addressee>dostum</addressee> uyan</address></line></stanza>
</song>
